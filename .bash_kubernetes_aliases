#   https://gitlab.com/nanuchi/youtube-tutorial-series/-/blob/master/demo-kubernetes-components/k8s-commands.md

#   To create the Deployment and its service: kubectl apply -f k8s_mongo.yaml
#   To check the successfull creation: kubectl get service
#   To check that the service is connected to the expected Pod:  kubectl describe service mongodb-service

alias k_apply_file='kubectl apply -f'
alias k_get='kubectl get'

# k_desc service mongodb-service
function k_desc() {
    [ "$#" != "2" ] && echo "USAGE: ${FUNCNAME[0]} <kubernetes_component> <component_name>..." >&2 && return 1
    kubectl describe "$@"
}

# k_desc_service mongodb-service
function k_desc_service() {
    [ "$1" == "" ] && echo "USAGE: ${FUNCNAME[0]} <k8s_service_name>" >&2 && return 1
    k_desc service "$@"
}

